# Prettier configuration

printWidth: 100
singleQuote: true
tabWidth: 2
useTabs: false
semi: true
quoteProps: consistent
bracketSpacing: true

# js and ts rules:
arrowParens: avoid

# jsx and tsx rules:
jsxBracketSameLine: false
jsxSingleQuote: false

# java rules:
overrides:
  - files: "*.java"
    options:
      tabWidth: 4
